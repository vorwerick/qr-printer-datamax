   <LinearLayout
       android:id="@+id/main"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintTop_toTopOf="parent"
       >
       <LinearLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toTopOf="parent">

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:id="@+id/layout_ip_address"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="8dp"
               android:layout_marginVertical="8dp"
               android:layout_marginTop="16dp"
               android:backgroundTint="@color/kombu_green_dark"
               app:cardCornerRadius="4dp"
               app:cardElevation="4dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="Stav připojení"
                       android:textColor="@color/ivory_dark" />

                   <TextView
                       android:id="@+id/ip_address_text"

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="8dp"
                       android:layout_marginBottom="8dp"

                       android:textColor="@color/ivory"
                       android:textColorHint="@color/ivory"
                       android:textSize="24sp" />
               </LinearLayout>
           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:id="@+id/layout_date_time"
               android:layout_height="wrap_content"
               android:layout_marginHorizontal="8dp"
               android:layout_marginVertical="8dp"
               android:backgroundTint="@color/kombu_green_dark"
               app:cardCornerRadius="4dp"
               app:cardElevation="4dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:text="Tiskne se"
                       android:textColor="@color/ivory_dark" />

                   <TextView
                       android:id="@+id/code_text"

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginHorizontal="8dp"
                       android:layout_marginBottom="8dp"

                       android:textColor="@color/ivory"
                       android:textColorHint="@color/ivory"
                       android:textSize="24sp" />
               </LinearLayout>
           </androidx.cardview.widget.CardView>

       </LinearLayout>

       <Button
           android:id="@+id/button_change_code"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginHorizontal="8dp"
           android:layout_marginBottom="16dp"
           android:backgroundTint="@color/brunswick_green"
           android:elevation="16dp"
           android:shadowColor="@color/black"
           android:shadowDx="2"
           android:shadowDy="2"
           android:text="Změnit kód"
           android:textColor="@color/ivory"
           android:textSize="28sp" />
