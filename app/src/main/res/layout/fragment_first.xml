    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:alpha="0.5"
        android:layout_margin="24dp"
        android:id="@+id/logo"
        android:src="@drawable/logoxi3"
        app:layout_constraintBottom_toTopOf="@id/print_buttons"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main" />

    <LinearLayout
        android:id="@+id/print_buttons"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">



        <Button
            android:id="@+id/button_print_datamax"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/brunswick_green"
            android:elevation="16dp"
            android:shadowColor="@color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:textAllCaps="false"
            android:text="PRINT"
           android:textStyle="bold"
            android:textColor="@color/ivory"
            android:textSize="60sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_print_10"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/brunswick_green"
                android:elevation="16dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:textAllCaps="false"
                android:text="10x"
                android:textStyle="bold"
                android:textColor="@color/ivory"
                android:textSize="32dp" />
            <Button
                android:id="@+id/button_print_20"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/brunswick_green"
                android:elevation="16dp"
                android:shadowColor="@color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:textAllCaps="false"
                android:text="20x"
                android:textStyle="bold"
                android:textColor="@color/ivory"
                android:textSize="32dp" />
            <Button
                android:id="@+id/button_print_30"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
